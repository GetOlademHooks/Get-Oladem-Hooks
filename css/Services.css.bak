.box-wrap{
  display:flex;
  align-items:center;
  justify-content:center;
  margin:10%;
  position: relative;
  
  
  
  
  
}
.box a{
	 font-size: 25px;
	 color: thistle;
	 text-decoration: none;
}
.box{
  padding:0px 20px;
  margin:2%;
  background:transparent;
  width:30%;
  border:2px solid aqua;
  box-shadow:0 2px 3px 0px rgba(0,0,0,0.25);
  border-radius:0px;
  transition:.2s all; 
  color: thistle;
  font-size: 22px;
  
   font-family: arial;
}
.box-wrap:hover .box{
  filter:blur(3px);
  opacity:.5;
  transform: scale(.98);
  box-shadow:none;
}
.box-wrap:hover .box:hover{
  transform:scale(1);
  filter:blur(0px);
  opacity:1;
  box-shadow:0 8px 20px 0px rgba(0,0,0,0.125);
}
